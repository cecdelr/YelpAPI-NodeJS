<% include partials/header %>

<div class="container text-center" id="searchBox">
	<div class="row">
		<div class="col-md-8" id="form">
		<h1>Yelp Search</h1>
		<p>Fill in the form below</p>

		
			<form action="/camps" method="GET">
				<div class="form-group">
					<label for="keyword">Keyword:</label>
					<input type="text" class="form-control" placeholder="Keyword (example: restaurants)" name="term" id="keyword">
				</div>

				<div class="form-group">
					<label for="location">Location:</label>
					<input type="text" class="form-control" placeholder="Location (example: Seattle)" name="location" id="location">
				</div>
				
				<input class="btn btn-lg btn-primary btn-block" type="submit">
			</form>
		</div>
	</div>
</div>

